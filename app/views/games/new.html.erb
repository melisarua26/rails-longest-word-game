<h1>
  <% @letters.each do |letter| %>
    <%= letter%>
  <% end %>
</h1>

<form action="/score" data-turbo="false" method="post">
  <input type="text" name="games" placeholder="Write your word" value>
  <input type="submit" value="Enviar!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
